{
  "name": "english-word-app",
  "version": "1.0.0",
  "description": "An English word learning application with word books, classes, and games",
  "main": "index.js",
  "scripts": {
    "start": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd backend && npm start",
    "client": "cd frontend && npm start",
    "dev": "concurrently \"npm run server:dev\" \"npm run client\"",
    "server:dev": "cd backend && npm run dev",
    "build": "cd frontend && npm run build",
    "test": "concurrently \"cd backend && npm test\" \"cd frontend && npm test\"",
    "deploy": "npm run build && cd backend && npm start"
  },
  "keywords": [
    "english",
    "words",
    "learning",
    "education",
    "game"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^8.2.0"
  }
}